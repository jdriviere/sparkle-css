{
  "name": "sparkle.css",
  "version": "1.9.9-rc.1",
  "description": "A lightweight, open-source, mobile-first CSS framework for easy website designs.",
  "main": "sparkle.min.css",
  "scripts": {
    "build:html": "node node_modules/gulp/bin/gulp pug",
    "build:css": "node node_modules/gulp/bin/gulp sassify",
    "build:js": "node node_modules/gulp/bin/gulp uglify",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "test": "node node_modules/gulp/bin/gulp sassify && node node_modules/gulp/bin/gulp uglify",
    "serve": "node node_modules/gulp/bin/gulp serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdriviere/sparkle-css.git"
  },
  "author": "J. Djimitry Riviere <tilithar@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jdriviere/sparkle-css/issues"
  },
  "homepage": "https://jdriviere.github.io/sparkle-css",
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "browser-sync": "^2.24.5",
    "cssnano": "^4.0.0-rc.2",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.9.4",
    "gulp-concat-css": "^3.1.0",
    "gulp-imagemin": "^4.1.0",
    "gulp-postcss": "^7.0.1",
    "gulp-pug": "^3.3.0",
    "gulp-rename": "^1.3.0",
    "gulp-sass": "^4.0.1",
    "gulp-uglify": "^3.0.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-optipng": "^5.2.1",
    "imagemin-svgo": "^5.2.4",
    "pump": "^1.0.3"
  }
}
